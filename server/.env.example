PORT=3000

# Supabase transaction pooler URL
DATABASE_URL=postgresql://postgres.xxxxxx:[YOUR-PASSWORD]@aws-1-eu-west-1.pooler.supabase.com:6543/postgres

# Supabase (Storage uploads)
SUPABASE_URL=https://xxxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=

# JWT signing secret
JWT_SECRET=change-me

# Optional: seed an admin superuser at startup
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=change-me
SUPERUSER_NAME=Admin

# Optional: PostgreSQL client config
# PGSSL=false
# PG_POOL_MAX=10
# PG_IDLE_TIMEOUT_MS=30000
# PG_CONN_TIMEOUT_MS=10000